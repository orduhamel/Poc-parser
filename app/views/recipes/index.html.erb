<h1 class="text-center">Searching recipes</h1>
<div class="container">
	<div class="row justify-content-center">
    <div class="col-sm-8">
			<%= form_tag recipes_path, method: :get do %>
				<%= text_field_tag :query,
					params[:query],
					class: "form-control",
					placeholder: "Find a recipe"
				%>
				<%= submit_tag "Search", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
	<div class="row justify-content-center">
    <div class="col-sm-8">
			<div id="recipes">
				<% if @recipes.present? %>
					<% @recipes.each do |recipe| %>
						<div>
							<img src="<%= recipe.image %>" width="500" height="600" >
							<h4><%= recipe.title %></h4>
							<h4><%= recipe.rating %></h4>
							<h4><%= recipe.total_time %></h4>
						</div>
					<% end %>
				<% else %>
					<p><%= "No results found" %></p>
				<% end %>
      </div>
		</div>
	</div>
</div>
